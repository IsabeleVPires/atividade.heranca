public class RetanguloSimples implements DesenhoRetangulo {
    @Override
    public void desenhar(String texto) {
        int largura = texto.length() + 4;
        System.out.println("+" + "-".repeat(largura) + "+");
        System.out.println("|  " + texto + "  |");
        System.out.println("+" + "-".repeat(largura) + "+");
    }
}
